<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/changePhoto_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="Choose from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/changePhoto_view_camera"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#686363"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePhoto_title" />

    <ImageView
        android:id="@+id/changePhoto_imageView_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/changePhoto_view_camera"
        app:layout_constraintEnd_toEndOf="@+id/changePhoto_view_camera"
        app:layout_constraintStart_toStartOf="@+id/changePhoto_view_camera"
        app:layout_constraintTop_toTopOf="@+id/changePhoto_view_camera"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        style="@style/AppTheme.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/camera"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/changePhoto_view_camera"
        app:layout_constraintStart_toStartOf="@+id/changePhoto_view_camera"
        app:layout_constraintTop_toBottomOf="@+id/changePhoto_imageView_camera" />

    <View
        android:id="@+id/changePhoto_view_gallery"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#686363"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePhoto_title" />

    <ImageView
        android:id="@+id/changePhoto_imageView_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_gallery"
        app:layout_constraintBottom_toBottomOf="@+id/changePhoto_view_gallery"
        app:layout_constraintEnd_toEndOf="@+id/changePhoto_view_gallery"
        app:layout_constraintStart_toStartOf="@+id/changePhoto_view_gallery"
        app:layout_constraintTop_toTopOf="@+id/changePhoto_view_gallery"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        style="@style/AppTheme.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/gallery"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/changePhoto_view_gallery"
        app:layout_constraintStart_toStartOf="@+id/changePhoto_view_gallery"
        app:layout_constraintTop_toBottomOf="@+id/changePhoto_imageView_gallery" />

</androidx.constraintlayout.widget.ConstraintLayout>